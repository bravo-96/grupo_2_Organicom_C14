      <section class="detalle-producto">
         <p class="categoria">Categoria: <a href=""><%= producto.categoria.nombre %> </a></p>
         <p class="categoria">Marca: <%= producto.marca.nombre %></p>
         <p class="categoria">Origen: <%= producto.origen.nombre %></p>
         <h1 class="titulo-producto"><%= producto.nombre %></h1>
         
         <div class="favorito-contenedor">
            <p class="estrellas"><span class="icono"></span>4.0</p>
            <p class="favorito"><span>Agregar a favoritos</span><span class="icono"></span></p>
         </div>
         <div class="precio-contenedor">
            <p class="precio-final">
               $<%= producto.descuento ? 
               Math.trunc(+producto.precio - (+producto.precio * +producto.descuento / 100)) :
               Math.trunc(producto.precio) %>.00
            </p>

            <% if (producto.descuento) { %>
            <p class="precio-inicial">
               <span>$ <%= producto.precio %></span> <span class="descuento"><%= producto.descuento %>%
                  OFF!</span>
            </p>
            <% } %>
         </div>
         <div class="cantidad">
            <label for="input-cantidad">¿Cuantos queres llevar?</label>
            <div class="cantidad-input-contenedor">
               <button type="button" class="resta">-</button>
               <input type="text" max="100" id="input-cantidad" name="input-cantidad" value="1">
               <button type="button" class="suma">+</button>
            </div>
         </div>
         <p>Métodos de pagos: </p>
         <ul class="lista-metodos-pago">
            <li><img title="Efectivo" src="/assets/img/efectivo.png" alt></li>
            <li><img title="Mercado Pago" src="/assets/img/merc-pago.png" alt></li>
            <li><img title="Visa" src="/assets/img/visa.png" alt></li>
            <li><img title="Master Card" src="/assets/img/mast-card.png" alt></li>
            <li><img title="American Express" src="/assets/img/amer-express.png" alt></li>
         </ul>
         <div class="btns-contenedor">
            <button type="button" class="btn-agregar-carrito">Agregar <span class="icono"></span></button>
            <% if(typeof session.user === "undefined") {%> 
              <button class="btn-comprar-ahora"><a href="/users/login-lateral">Inicia sesion para continuar</a></button> 
            <% }else{ %> 
            <button type="button" class="btn-comprar-ahora">
               <a href="/products/carrito">
                  Comprar ahora
               </a>
            </button>
            <% } %> 
         </div>
      </section>
